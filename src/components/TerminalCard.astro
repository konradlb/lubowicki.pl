---
import type { Post } from '../types';
import Icon from './Icon.astro';

interface Props {
  post: Post;
}

const { post } = Astro.props;

const formattedDate = new Date(post.data.date).toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const readTime = Math.ceil(post.data.excerpt.pl.length / 200); // Estimate read time based on excerpt length
---

<a href={`/${post.slug}`} class="terminal-card">
  <div class="card-glitch-bg"></div>
  <h2 class="card-title">{post.data.title.pl}</h2>
  <p class="card-excerpt">{post.data.excerpt.pl}</p>
  <div class="tags">
    {post.data.tags.map(tag => (
      <span class="tag">
        <Icon name="tag" size="16" /> {tag}
      </span>
    ))}
  </div>
  <div class="card-meta">
    <span class="date">
      <Icon name="calendar" size="16" /> {formattedDate}
    </span>
    <span class="read-time">
      <Icon name="clock" size="16" /> {readTime} min czytania
    </span>
  </div>
  <div class="read-more">
    Czytaj dalej <Icon name="arrowRight" size="16" />
  </div>
</a>

<style>
  .terminal-card {
    display: flex;
    flex-direction: column;
    position: relative;
    padding: var(--spacing-md);
    border: 1px solid var(--color-dim);
    border-radius: 4px;
    background-color: var(--color-bg-dim);
    color: var(--color-light);
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    overflow: hidden; /* For glitch effect */
  }

  .terminal-card:hover {
    border-color: var(--color-matrix);
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 255, 65, 0.2);
    color: var(--color-matrix);
  }

  .card-glitch-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-matrix);
    opacity: 0.1;
    z-index: 0;
    transition: transform 0.3s ease-out;
    transform: scaleX(0); /* Hidden by default */
    transform-origin: left;
  }

  .terminal-card:hover .card-glitch-bg {
    transform: scaleX(1); /* Reveal on hover */
  }

  .card-title {
    font-size: 1.5rem;
    color: var(--color-matrix);
    margin-top: 0;
    margin-bottom: var(--spacing-sm);
    position: relative;
    z-index: 1;
  }

  .card-excerpt {
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: var(--spacing-md);
    flex-grow: 1; /* Pushes meta and read-more to bottom */
    position: relative;
    z-index: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    position: relative;
    z-index: 1;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    background-color: var(--color-dark);
    color: var(--color-dim);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 2px;
    font-size: 0.75rem;
    line-height: 1;
    border: 1px solid var(--color-dim);
  }

  .tag .icon {
    margin-right: 0.25rem;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    color: var(--color-gray);
    margin-top: auto; /* Push to bottom */
    margin-bottom: var(--spacing-md);
    position: relative;
    z-index: 1;
  }

  .card-meta span {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    font-weight: bold;
    color: var(--color-matrix);
    position: relative;
    z-index: 1;
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style>